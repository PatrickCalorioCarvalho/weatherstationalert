@{
    ViewBag.Title = "Home Page";

}
<div class="image-preload">
    <img src="img/drop-color.png" alt="">
    <img src="img/drop-alpha.png" alt="">
    <img src="img/weather/texture-rain-fg.png" />
    <img src="img/weather/texture-rain-bg.png" />
    <img src="img/weather/texture-sun-fg.png" />
    <img src="img/weather/texture-sun-bg.png" />
    <img src="img/weather/texture-fallout-fg.png" />
    <img src="img/weather/texture-fallout-bg.png" />
    <img src="img/weather/texture-drizzle-fg.png" />
    <img src="img/weather/texture-drizzle-bg.png" />
</div>
<div class="container">
    <header class="codrops-header">
        <a class="codrops-icon codrops-icon--drop" title="Back to the article"><span>Back to the Codrops article</span></a>
        <h1>Weather Station Alert</h1>
        <nav class="codrops-demos">
            <a class="current-demo">Número de Leitura : @ViewBag.Leituras</a>
            <a class="current-demo">Data da última Leitura : @ViewBag.Data</a>
        </nav>
    </header>
    <div class="slideshow">
        <canvas width="1" height="1" id="container" style="position:absolute"></canvas>
        <div class="slide" id="slide-1">
            <div class="slide__element slide__element--date">Adamantina - SP , @ViewBag.Dia</div>
            <div class="slide__element slide__element--temp">@ViewBag.Temperatura°<small>C</small></div>
            <div class="slide__element slide__element--temp">@ViewBag.Umidade <small>%</small></div>
            <div class="slide__element slide__element--temp">@ViewBag.Pluviosidade <small>MM</small></div>
        </div>
    </div>
    <p class="nosupport">Sorry, but your browser does not support WebGL!</p>
</div>